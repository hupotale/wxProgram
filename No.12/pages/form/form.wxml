<form bindsubmit='formSubmit' bindreset='formReset'>
  <checkbox-group bindchange="changed" name="guojia">
    <checkbox value='中国'/>中国
    <checkbox value='美国' disabled='{{true}}'/>美国
    <checkbox value='俄国' checked='{{true}}' color='red'/>俄国
